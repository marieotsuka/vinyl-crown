<section class="title">
  <h1>{{ page.title }}</h1>
</section>
<section itemprop="description">
  <div>{{ page.content }}</div>
  <div class="profilepic"></div>
</section>
{% if page.metafields.custom_fields["image"] != blank %}
  <div class="custom-field custom-field__image custom-field__type--image">
    <h3 class="custom-field--title">Image</h3>
    <div class="custom-field--value">  
      {% render 'cf-image' with image: page.metafields.custom_fields["image"] %}
    </div>
  </div>
{% endif %}

<script>
  jQuery(function($) {
    var image = $("section div:first-child img");
        image.hide();
        $("section div:nth-child(2)").append(image);
        $("section div:nth-child(2) img:first-child").css({'display':'block'});
      });
  
  </script>