{% comment %}
  Important notes about pagination:
  - Never access collection.products before the opening paginate tag.
  - Never paginate by more than 50.
{% endcomment %}

{% paginate collection.products by 10 %}

  <section class="title">
    <h1>{{ collection.title }}</h1>
  </section>

  <ul>
    {% for product in collection.products %}
        <li>
          <a href="{{ product.url | within: collection }}">
            {{ product.title }} <span class="colophon san-serif">{{product.metafields.type.album}}, {{product.metafields.year.album}}</span>
            <img src="{{ product | img_url: 'grande' }}" alt="{{ product.featured_image.alt | escape }}" />
          </a>
        </li>
    {% else %}
      <p>There are no products in this view.</p>
    {% endfor %}
  </ul>
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}

{% endpaginate %}

